@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminUI/Index.cshtml";
}



<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h3 class="mb-0">Sosyal Medya Ekle</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="#" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span>Sosyal Medya</span>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="text-secondary">Ekle</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card bg-white p-20 rounded-10 border border-white mb-4">
                <form method="post" id="socialMediaForm">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-20">
                                <label class="label fs-16 mb-2">Sosyal Medya Adı</label>
                                <div class="form-floating">
                                    <input asp-for="Name" type="text" class="form-control" id="floatingInput1" placeholder="User ID" required>
                                    <label for="floatingInput1">Adı *</label>
                                </div> 
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-20">
                                <label class="label fs-16 mb-2">Icon</label>
                                <div class="form-floating">
                                    <input asp-for="Icon" type="text" class="form-control" id="floatingInput2" placeholder="User name" resource="">
                                    <label for="floatingInput2">Icon *</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-20">
                                <label class="label fs-16 mb-2">Hesap Linki</label>
                                <div class="form-floating">
                                    <input asp-for="Url" type="url" class="form-control" id="floatingInput3" placeholder="Email address" required>
                                    <label for="floatingInput3">Link *</label>
                                </div>
                            </div>
                        </div>
                    
                        <div class="col-lg-6">
                            <div class="mb-20">
                                <label class="label fs-16 mb-2">Fotoğraf Url'i</label>
                                <div class="form-floating">
                                    <input asp-for="ImageUrl" type="url" class="form-control" id="floatingInput5" placeholder="Phone no" required>
                                    <label for="floatingInput5">Fotoğraf *</label>
                                </div>
                            </div>
                        </div>
                      
                        

                        <div class="col-lg-12">
                            <span class="text-danger">@Html.ValidationSummary()</span>
                            <div class="d-flex gap-2">
                                <button  class="btn btn-primary fw-normal text-white">Ekle</button>
                                <a href="/Admin/SocialMedia/Index"  class="btn btn-danger fw-normal text-white" >İptal</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
</div>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById("socialMediaForm").addEventListener("submit", function (e) {
        e.preventDefault(); // Formun direkt gitmesini engelle

        Swal.fire({
            title: "Emin misiniz?",
            text: "Bu sosyal medya hesabını eklemek istiyor musunuz?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonText: "Evet, ekle!",
            cancelButtonText: "Hayır",
        }).then((result) => {
            if (result.isConfirmed) {
                e.target.submit(); // Onaylandı → formu gönder
            }
        });
    });
</script>











