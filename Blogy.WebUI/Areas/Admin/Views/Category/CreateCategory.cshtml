@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/AdminUI/Index.cshtml";
}
<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h3 class="mb-0">Yeni Kategori Oluşturun</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="index.html" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span>Kategoriler</span>
                </li>
               
                <li class="breadcrumb-item active" aria-current="page">
                    <span class="text-secondary">Yeni Kategori Ekle</span>
                </li>
            </ol>
        </nav>
    </div>

    <div class="card bg-white p-20 rounded-10 border border-white mb-4">
        <h3 class="mb-20">Add New Category</h3>
        <form method="post" id="categoryForm">
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Kategori Adı</label>
                        <div class="form-floating">
                            <input asp-for="Name" type="text" class="form-control" id="floatingInput1" placeholder="Category name">
                            <label for="floatingInput1">Kategori adı gir</label>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-20">
                        <label class="label fs-16 mb-2">Kategori Fotoğraf Url</label>
                        <div class="form-floating">
                            <input type="url" asp-for="CategoryImage" class="form-control" id="floatingInput2" placeholder="Slug">
                            <label for="floatingInput2">Kategori fotoğraf url gir</label>
                        </div>
                    </div>
                   
                </div>
                
                
              
              
                <div class="col-lg-12">
                    <span class="text-danger">@Html.ValidationSummary()</span>
                    <div class="d-flex gap-2">
                        <button type="button" id="btnCreate" class="btn btn-primary fw-normal text-white">Kategori Oluştur</button>
                        <a href="/Admin/Category/Index" class="btn btn-danger fw-normal text-white" >İptal</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>






<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // ... Quill ve AI kodların yukarıda ...

    // ==================================================
    // PROFESYONEL KAYIT SİSTEMİ
    // ==================================================
    document.getElementById("btnCreate").addEventListener("click", function () {

        const form = document.getElementById("categoryForm");

        // 1. Veri Senkronizasyonu (Quill -> Input)
        if (typeof quill !== 'undefined') {
            const editorContent = quill.root.innerHTML;
            // Boşluk kontrolü (Sadece boşluk varsa temizle)
            document.getElementById('descriptionInput').value =
                (editorContent === '<p><br></p>') ? '' : editorContent;
        }

        // 2. Validasyon Kontrolü
        if (!form.checkValidity()) {
            // Tarayıcının standart uyarısını tetikle
            form.reportValidity();

            // Opsiyonel: Eksik alanlar için küçük bir "Toast" uyarı fırlat
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true
            });
            Toast.fire({
                icon: 'error',
                title: 'Lütfen zorunlu alanları doldurunuz.'
            });
            return;
        }

        // 3. Profesyonel Onay Penceresi
        Swal.fire({
            title: 'Kategori oluşturlusun mu?',
            html: "@ViewBag.userName  kategoriyi siz oluşturacaksınız.",
            icon: 'info', // 'warning' yerine 'info' daha soft durur
            showCancelButton: true,
            confirmButtonColor: '#4f46e5', // Modern İndigo Mavisi
            cancelButtonColor: '#ef4444',  // Soft Kırmızı
            confirmButtonText: '<i class="ri-check-line"></i> Evet, Oluştur',
            cancelButtonText: 'Vazgeç',
            focusConfirm: false,
            reverseButtons: true, // Butonların yerini değiştirir (Vazgeç solda)
            backdrop: `
                rgba(0,0,0,0.4)
                left top
                no-repeat
            `,
            showClass: {
                popup: 'animate__animated animate__fadeInDown' // Yumuşak giriş animasyonu
            },
            hideClass: {
                popup: 'animate__animated animate__fadeOutUp'
            }
        }).then((result) => {
            if (result.isConfirmed) {

                // 4. "Yükleniyor" Animasyonu (Kritik Nokta)
                // Form sunucuya giderken kullanıcının beklemesini sağlar
                let timerInterval;
                Swal.fire({
                    title: 'Oluşturuluyor kategoriniz ...',
                    html: '  ',
                    timerProgressBar: true,
                    allowOutsideClick: false, // Tıklayıp kapatamasın
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                // 5. Formu Gönder
                form.submit();
            }
        });
    });
</script>