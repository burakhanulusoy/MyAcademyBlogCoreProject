@model PagedList<ResultBlogDto>

@{
    ViewData["Title"] = "Toxic İfadeler İçermeyen Blog Yazıları";
    Layout = "~/Views/AdminUI/Index.cshtml";
    var customOption = PagedListRenderOptions.Bootstrap4PageNumbersPlusPrevAndNext;
    customOption.LinkToNextPageFormat = "->";
    customOption.LinkToPreviousPageFormat = "<-";
}

<div class="main-content-container overflow-hidden">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-4 mt-1">
        <h3 class="mb-0">Toxic İfadeler İçermeyen Blog Yazıları</h3>

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb align-items-center mb-0 lh-1">
                <li class="breadcrumb-item">
                    <a href="#" class="d-flex align-items-center text-decoration-none">
                        <i class="ri-home-8-line fs-15 text-primary me-1"></i>
                        <span class="text-body fs-14 hover">Dashboard</span>
                    </a>
                </li>

                <li class="breadcrumb-item active" aria-current="page">
                    <span>Blog</span>
                </li>

                <li class="breadcrumb-item active" aria-current="page">
                    <span class="text-success">Temiz İçerikli Bloglar</span>
                </li>
            </ol>
        </nav>
    </div>


    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-lg-3 mb-4">

                <div class="card clean-card bg-white rounded-10 border-0 h-100">

                    <div class="position-relative">
                        <a href="/Admin/Blog/BlogDetails/@item.Id" class="text-decoration-none d-block">
                            <img src="@item.CoverImage" class="blog-img" alt="blog-image">
                        </a>

                        <!-- Clean Badge -->
                        <span class="clean-badge position-absolute top-0 start-0 m-2">
                            ✔ Temiz İçerik
                        </span>

                        <button class="p-0 bg-white border-0 rounded-circle position-absolute top-0 end-0 wish-btn"
                                style="width: 40px; height: 40px; line-height: 40px; margin: 20px;">
                            <i class="ri-heart-line fs-16 text-body"></i>
                        </button>
                    </div>

                    <div class="p-20 text-center">
                        <h3 class="mb-10">
                            <a href="#" class="text-decoration-none text-secondary hover-text">@item.Title</a>
                            <br />
                            <small class="text-muted d-block mb-2">Yazar: @item.Writer?.FullName</small>
                        </h3>

                        <div class="mb-3 text-center">
                            <i class="ri-calendar-line me-1 text-success"></i>
                            <span>@item.CreatedDate.ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("tr-TR"))</span>
                        </div>

                        <div class="d-flex justify-content-center gap-2 flex-wrap">
                            <a href="/Admin/Blog/BlogDetails/@item.Id" class="btn clean-btn fs-16 fw-normal text-white rounded-pill px-4 py-2 hover-dark">
                                Yazıyı İncele
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        }
    </div>


    <div class="row mt-4">
        <div class="col-lg-12">
            <div class="d-flex justify-content-center justify-content-sm-between align-items-center text-center flex-wrap gap-2 showing-wrap mb-4">
                <span class="fs-15">
                    Toplam @Model.TotalItemCount kayıttan @Model.FirstItemOnPage - @Model.LastItemOnPage arası gösteriliyor.
                </span>

                <nav class="custom-pagination" aria-label="Page navigation example">
                    <ul class="pagination mb-0 justify-content-center">
                        <pager asp-action="GetBlogsNonTooxic" asp-controller="Blog" list="@Model" options="@customOption"></pager>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>


<style>

    /* --- GENERIC IMAGE --- */
    .blog-img {
        width: 100%;
        height: 230px;
        object-fit: cover;
        border-radius: 10px 10px 0 0;
        position: relative;
    }

    /* --- CLEAN CARD (Yeşil tema) --- */
    .clean-card {
        border: 1px solid #d6f5df !important;
        box-shadow: 0 8px 20px rgba(50, 150, 80, 0.10) !important;
        position: relative;
        transition: 0.3s ease;
    }

        .clean-card:hover {
            box-shadow: 0 12px 30px rgba(50, 160, 60, 0.22) !important;
        }

        /* Green Overlay */
        .clean-card .blog-img::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(0, 150, 40, 0.12);
            border-radius: 10px 10px 0 0;
            opacity: 1;
            transition: 0.3s ease;
            pointer-events: none;
        }

        .clean-card:hover .blog-img::after {
            background: rgba(0, 150, 40, 0.25);
        }

    /* --- CLEAN BADGE --- */
    .clean-badge {
        background: #e9ffef;
        color: #0f8a2e;
        padding: 6px 12px;
        font-size: 12px;
        font-weight: 700;
        border: 1px solid #b6e6c3;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0, 150, 0, 0.15);
        z-index: 5;
    }

    .clean-card:hover .clean-badge {
        transform: scale(1.05);
    }

    /* --- CLEAN BUTTON --- */
    .clean-btn {
        background: linear-gradient(135deg, #3cb46e, #1f8a44) !important;
        border: none !important;
        transition: 0.3s ease;
    }

        .clean-btn:hover {
            filter: brightness(1.15);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(0, 150, 50, 0.25);
        }

    .wish-btn:hover {
        background-color: rgba(0, 150, 50, 0.15) !important;
        transform: scale(1.25) !important;
    }

</style>
