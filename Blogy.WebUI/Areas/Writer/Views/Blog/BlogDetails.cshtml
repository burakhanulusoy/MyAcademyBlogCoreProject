<script>
    document.addEventListener('DOMContentLoaded', function() {
        const buttons = document.querySelectorAll('.btn-analyze');

        buttons.forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const blogId = this.getAttribute('data-id');
                const originalBtnText = this.innerHTML;

                // 1. Butonu Yükleniyor moduna al
                this.innerHTML = '<i class="ri-loader-4-line ri-spin"></i> Analiz...';
                this.classList.add('disabled');

                // 2. Kutudaki detay alanını temizle ve "Yükleniyor" göster
                const detailsBox = document.getElementById('analysis-details');
                detailsBox.style.display = 'block';
                detailsBox.innerHTML = '<small class="text-muted">Analiz yapılıyor, lütfen bekleyin...</small>';

                fetch(`/Writer/Blog/AnalyzeToxicity?id=${blogId}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            // --- A. Renkleri Belirle ---
                            // Eğer durum "TEMİZ" ise yeşil, "ZARARLI" ise kırmızı yapalım
                            const isSafe = data.data.genelDurum.includes("TEMİZ");
                            const colorClass = isSafe ? "text-success" : "text-danger";
                            const bgClass = isSafe ? "bg-success" : "bg-danger";
                            const width = isSafe ? "0%" : "100%"; // Temizse bar boş, zararlıysa dolu olsun (veya mantığına göre değiştir)

                            // --- B. HTML Elemanlarını Güncelle ---

                            // 1. Yüzdelik Yazısı (Genel Durumu yazalım)
                            const lblPercentage = document.getElementById('lbl-percentage');
                            lblPercentage.className = `fw-bold ${colorClass}`;
                            lblPercentage.innerText = isSafe ? "TEMİZ" : "RİSKLİ";

                            // 2. Progress Bar
                            const progressBar = document.getElementById('progress-toxicity');
                            progressBar.className = `progress-bar ${bgClass}`;
                            progressBar.style.width = isSafe ? "100%" : "100%"; // Görsel olarak dolu dursun ama rengi değişsin

                            // 3. Detay Listesini Oluştur
                            let htmlContent = `<div class="d-flex align-items-center mb-2 ${colorClass}">
                                                    <i class="${isSafe ? 'ri-checkbox-circle-line' : 'ri-alert-line'} me-1"></i>
                                                    <strong>${data.data.genelDurum}</strong>
                                               </div>`;

                            htmlContent += '<ul class="list-unstyled mb-0 fs-13 text-secondary">';

                            if (data.data.skorlar) {
                                data.data.skorlar.forEach(skor => {
                                    // Skor metnini biraz süsleyelim
                                    htmlContent += `<li class="d-flex justify-content-between border-bottom border-light py-1">
                                        <span>${skor.split(':')[0]}</span>
                                        <span class="fw-medium">${skor.split(':')[1]}</span>
                                    </li>`;
                                });
                            }
                            htmlContent += '</ul>';

                            // 4. Detay Kutusuna Bas
                            detailsBox.innerHTML = htmlContent;

                        } else {
                            detailsBox.innerHTML = `<span class="text-danger small"><i class="ri-error-warning-line"></i> ${data.message}</span>`;
                        }
                    })
                    .catch(err => {
                        console.error(err);
                        detailsBox.innerHTML = `<span class="text-danger small">Bağlantı hatası oluştu.</span>`;
                    })
                    .finally(() => {
                        // Butonu eski haline getir
                        this.innerHTML = originalBtnText;
                        this.classList.remove('disabled');
                    });
            });
        });
    });
</script>



<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    // ... Senin mevcut "analyze" kodların burada duruyor ...

    // ==========================================
    // YENİ EKLENEN: DURUM DEĞİŞTİRME SWEETALERT
    // ==========================================
    function confirmStatusChange(e, url, isPublishing) {
        e.preventDefault(); // Linke gitmeyi durdur

        // Ayarlar: Aktif mi ediliyor, Pasif mi?
        const titleText = isPublishing ? "Yayına Almak İstiyor musunuz?" : "Yayından Kaldırmak İstiyor musunuz?";
        const bodyText = isPublishing
            ? "Bu blog yazısı web sitesinde görünür hale gelecektir."
            : "Bu blog yazısı gizlenecek ve kullanıcılar göremeyecektir.";
        const confirmBtnText = isPublishing ? "Evet, Yayına Al" : "Evet, Pasife Al";
        const confirmBtnColor = isPublishing ? "#198754" : "#dc3545"; // Yeşil vs Kırmızı
        const iconType = isPublishing ? "question" : "warning";

        Swal.fire({
            title: titleText,
            text: bodyText,
            icon: iconType,
            showCancelButton: true,
            confirmButtonColor: confirmBtnColor,
            cancelButtonColor: '#6c757d',
            confirmButtonText: confirmBtnText,
            cancelButtonText: 'Vazgeç',
            reverseButtons: true // Butonların yerini değiştirir
        }).then((result) => {
            if (result.isConfirmed) {
                // Kullanıcı onayladı, Yükleniyor animasyonu göster
                Swal.fire({
                    title: 'İşlem Yapılıyor...',
                    text: 'Lütfen bekleyin, durum güncelleniyor.',
                    allowOutsideClick: false,
                    didOpen: () => { Swal.showLoading() }
                });

                // İşlem onaylandı, linke git
                window.location.href = url;
            }
        });
    }

    // Senin mevcut DOMContentLoaded kodların burada devam ediyor...
    document.addEventListener('DOMContentLoaded', function() {
       // ...
    });
</script>

<script>

        // ==========================================
    // SİLME İŞLEMİ İÇİN ÖZEL SWEETALERT
    // ==========================================
    function confirmDelete(e, url) {
        e.preventDefault(); // Linke tıklamayı durdur

        Swal.fire({
            title: 'Bu Yazıyı Silmek İstediğinize Emin misiniz?',
            text: "Bu işlem geri alınamaz! Blog yazısı kalıcı olarak silinecektir.",
            icon: 'warning',               // Ünlem işareti
            showCancelButton: true,
            confirmButtonColor: '#d33',    // Kırmızı renk (Tehlike!)
            cancelButtonColor: '#3085d6',  // Mavi renk (Vazgeç)
            confirmButtonText: '<i class="ri-delete-bin-line"></i> Evet, Sil!',
            cancelButtonText: 'Vazgeç',
            reverseButtons: true,          // Butonların yerini değiştirir (Vazgeç solda, Sil sağda)
            focusCancel: true              // Yanlışlıkla basılmasın diye varsayılan odak "Vazgeç"te olsun
        }).then((result) => {
            if (result.isConfirmed) {

                // Siliniyor animasyonu göster
                Swal.fire({
                    title: 'Siliniyor...',
                    text: 'Lütfen bekleyin, işlem gerçekleştiriliyor.',
                    allowOutsideClick: false,
                    didOpen: () => {
                        Swal.showLoading();
                    }
                });

                // Onay verildi, silme linkine git
                window.location.href = url;
            }
        });
    }


</script>





