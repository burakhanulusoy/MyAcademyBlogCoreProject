@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


    <!-- Links Of CSS File -->
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/sidebar-menu.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/simplebar.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/prism.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/quill.snow.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/remixicon.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/jsvectormap.min.css">
    <link rel="stylesheet" href="~/adminThema/fila/assets/css/style.css">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/adminThema/fila/assets/images/favicon.png">

    <!-- Title -->
    <title>Blogy - Yazar Paneli</title>
</head>
<body class="bg-body-bg">

    <!-- Start Preloader Area -->
    <div class="preloader" id="preloader">
        <div class="preloader">
            <div class="waviy position-relative">
                <span class="d-inline-block">B</span>
                <span class="d-inline-block">L</span>
                <span class="d-inline-block">O</span>
                <span class="d-inline-block">G</span>
                <span class="d-inline-block">Y</span>
            </div>
        </div>
    </div>
    <!-- End Preloader Area -->
    <!-- Start Sidebar Area -->
    <div class="sidebar-area" id="sidebar-area">
        <div class="logo position-relative d-flex align-items-center justify-content-between">
            <a href="index.html" class="d-block text-decoration-none position-relative">
                <img src="~/adminThema/fila/assets/images/logo-icon.png" alt="logo-icon">
                <span class="logo-text text-secondary fw-semibold">Blogy  &#9997;&#65039; </span>
            </a>
            <button class="sidebar-burger-menu-close bg-transparent py-3 border-0 opacity-0 z-n1 position-absolute top-50 end-0 translate-middle-y" id="sidebar-burger-menu-close">
                <span class="border-1 d-block for-dark-burger" style="border-bottom: 1px solid #475569; height: 1px; width: 25px; transform: rotate(45deg);"></span>
                <span class="border-1 d-block for-dark-burger" style="border-bottom: 1px solid #475569; height: 1px; width: 25px; transform: rotate(-45deg);"></span>
            </button>
            <button class="sidebar-burger-menu bg-transparent p-0 border-0" id="sidebar-burger-menu">
                <span class="border-1 d-block for-dark-burger" style="border-bottom: 1px solid #475569; height: 1px; width: 25px;"></span>
                <span class="border-1 d-block for-dark-burger" style="border-bottom: 1px solid #475569; height: 1px; width: 25px; margin: 6px 0;"></span>
                <span class="border-1 d-block for-dark-burger" style="border-bottom: 1px solid #475569; height: 1px; width: 25px;"></span>
            </button>
        </div>

        <aside id="layout-menu" class="layout-menu menu-vertical menu active" data-simplebar>
            <ul class="menu-inner">
                <li class="menu-title small text-uppercase">
                </li>
                <li class="menu-item">
                    <a href="/Writer/Staticks/Index" class="menu-link  active">
                        <span class="material-symbols-outlined menu-icon">dashboard</span>
                        <span class="title">İstatisklerim</span>
                    </a>


                </li>



                <li class="menu-item">
                    <a href="/Writer/Blog/Index" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">library_books</span>
                        <span class="title">Bloglarım</span>
                    </a>
                </li>

                <li class="menu-item">
                    <a href="/Writer/Blog/GetBlogsToxic" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">dangerous</span>
                        <span class="title">Toxic İşaretli Bloglarım</span>
                    </a>
                </li>

                <li class="menu-item">
                    <a href="/Writer/Blog/GetBlogsNonTooxic" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">verified</span>
                        <span class="title">Temiz İçerikli  Bloglarım</span>
                    </a>
                </li>

                <li class="menu-item">
                    <a href="/Writer/Blog/GetBlogsNonCheckedAdmin" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">pending_actions</span>
                        <span class="title">Onaylanmayan Bloglarım</span>
                    </a>
                </li>








                <li class="menu-item">
                    <a href="/Writer/Comment/GetUserComment" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">chat</span>
                        <span class="title">Yorumlarım</span>
                    </a>
                </li>








                <li class="menu-item">
                    <a href="/Writer/Blog/CreateBlog" class="menu-link  active">
                        <span class="material-symbols-outlined menu-icon">auto_stories</span>
                        <span class="title">Blog Yaz</span>
                    </a>
                </li>








                <li class="menu-item">
                    <a href="/Writer/ChangePassword/ChangePassword" class="menu-link  active">
                        <span class="material-symbols-outlined menu-icon">lock_open</span>
                        <span class="title">Şifre Değiştir</span>
                    </a>

                </li>


               



                <li class="menu-item">
                    <a href="/Writer/Profile/Index" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">account_circle</span>
                        <span class="title">Profil Düzenle</span>
                    </a>
                </li>




                <li class="menu-item">
                    <a href="/Default/Index" class="menu-link">
                        <span class="material-symbols-outlined menu-icon">logout</span>
                        <span class="title">Ana Sayfaya Dön</span>
                    </a>
                </li>
            </ul>
        </aside>
    </div>
    <!-- End Sidebar Area -->
    <!-- Start Main Content Area -->
    <div class="container-fluid">
        <div class="main-content d-flex flex-column">
            <!-- Start Header Area -->
            @await Component.InvokeAsync("_GetAllinfıLoginWriterComponent")
            <!-- End Header Area -->
            @RenderBody()

            <div class="flex-grow-1"></div>

            <!-- Start Footer Area -->
            <footer class="footer-area bg-white text-center rounded-10 rounded-bottom-0">
                <p class="fs-16 text-body">© <span class="text-secondary">Fila</span> is Proudly Owned by <a href="https://envytheme.com/" target="_blank" class="text-decoration-none text-primary">EnvyTheme</a></p>
            </footer>
            <!-- End Footer Area -->
        </div>
    </div>
    <!-- Start Main Content Area -->
    <!-- Start Theme Setting Area -->
    <button class="btn btn-primary theme-settings-btn p-0 position-fixed z-2 text-center rounded-circle" style="bottom: 24px; right: 24px; width: 56px; height: 56px; line-height: 54px;" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling">
        <i class="text-white ri-settings-3-fill fs-28" data-bs-toggle="tooltip" data-bs-placement="left" data-bs-title="Click On Theme Settings"></i>
    </button>

    <!-- Start Theme Setting Area -->
    <div class="offcanvas offcanvas-end bg-white border-0" data-bs-scroll="true" data-bs-backdrop="true" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel" style="box-shadow: 0 4px 20px #2f8fe812 !important; max-width: 300px;">
        <div class="offcanvas-header bg-light p-20">
            <h5 class="offcanvas-title fs-18 fw-medium" id="offcanvasScrollingLabel">Paneli Düzenle</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body p-0 overflow-hidden">
            <div class="last-child-none" style="max-height: 858px;" data-simplebar>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">RTL Modu</h4>
                    <div class="rtl-btn">
                        <label id="switch">
                            <input type="checkbox" onchange="toggleTheme()" class="toggle-switch rtl-switch" id="slider">
                        </label>
                    </div>
                </div>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">Yalnızca Kenar Çubuğu Koyu</h4>
                    <div class="sidebar-light-dark" id="sidebar-light-dark">
                        <input type="checkbox" class="toggle-switch sidebar-dark-switch">
                    </div>
                </div>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">Yalnızca Üst Kısım Koyu</h4>
                    <div class="header-light-dark" id="header-light-dark">
                        <input type="checkbox" class="toggle-switch header-dark-switch">
                    </div>
                </div>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">Sağda Sidebar</h4>
                    <div class="right-sidebar" id="right-sidebar">
                        <input type="checkbox" class="toggle-switch right-sidebar-switch">
                    </div>
                </div>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">Sidebar Gizle</h4>
                    <div class="icon-sidebar" id="icon-sidebar">
                        <input type="checkbox" class="toggle-switch icon-sidebar-switch">
                    </div>
                </div>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">Kenarlıklı Kart</h4>
                    <div class="card-border" id="card-border">
                        <input type="checkbox" class="toggle-switch border-switch">
                    </div>
                </div>
                <div class="p-20 border-bottom child">
                    <h4 class="fs-15 fw-medium mb-12">Kart Kenar Yarıçapı</h4>
                    <div class="card-radius-square" id="card-radius-square">
                        <input type="checkbox" class="toggle-switch border-radius-switch">
                    </div>
                </div>

                <div class="p-20 border-bottom child">
                    <a href="/Default/Index" class="btn btn-primary text-white">
                        Çıkış Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!-- End Theme Setting Area -->
    <!-- Link Of JS File -->
    <script src="~/adminThema/fila/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/adminThema/fila/assets/js/sidebar-menu.js"></script>
    <script src="~/adminThema/fila/assets/js/quill.min.js"></script>
    <script src="~/adminThema/fila/assets/js/data-table.js"></script>
    <script src="~/adminThema/fila/assets/js/prism.js"></script>
    <script src="~/adminThema/fila/assets/js/clipboard.min.js"></script>
    <script src="~/adminThema/fila/assets/js/simplebar.min.js"></script>
    <script src="~/adminThema/fila/assets/js/apexcharts.min.js"></script>
    <script src="~/adminThema/fila/assets/js/echarts.min.js"></script>
    <script src="~/adminThema/fila/assets/js/swiper-bundle.min.js"></script>
    <script src="~/adminThema/fila/assets/js/fullcalendar.main.js"></script>
    <script src="~/adminThema/fila/assets/js/jsvectormap.min.js"></script>
    <script src="~/adminThema/fila/assets/js/world-merc.js"></script>
    <script src="~/adminThema/fila/assets/js/custom/apexcharts.js"></script>
    <script src="~/adminThema/fila/assets/js/custom/echarts.js"></script>
    <script src="~/adminThema/fila/assets/js/custom/maps.js"></script>
    <script src="~/adminThema/fila/assets/js/custom/custom.js"></script>
    @RenderSection("Scripts", required: false)









</body>
</html>