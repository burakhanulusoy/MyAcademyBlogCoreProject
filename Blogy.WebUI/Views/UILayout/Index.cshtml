									@await Component.InvokeAsync("GetCategoriesAllComponent")

								</li>
								<li><a href="/AboutUs/Index">Hakkımızda</a></li>
								<li><a href="/Contact/Index">İletişim</a></li>
								<li><a href="/Login/Index">Giriş Yapın</a></li>
								<li><a href="/Register/SignUp">Üye Olun</a></li>
							</ul>
						</div>
						<div class="col-2 text-end">
							<a href="#" class="burger ms-auto float-end site-menu-toggle js-menu-toggle d-inline-block d-lg-none light">
								<span></span>
							</a>
							<form action="#" class="search-form d-none d-lg-inline-block">
								<input type="text" class="form-control" placeholder="Arayın...">
								<span class="bi-search"></span>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</nav>

	@RenderBody()
      

	@await Component.InvokeAsync("_FooterComponet")


	<div id="overlayer"></div>
	<div class="loader">
		<div class="spinner-border text-primary" role="status">
			<span class="visually-hidden">Yükleniyor...</span>
		</div>
	</div>


	<script src="~/blogy-1.0.0/js/bootstrap.bundle.min.js"></script>
	<script src="~/blogy-1.0.0/js/tiny-slider.js"></script>

