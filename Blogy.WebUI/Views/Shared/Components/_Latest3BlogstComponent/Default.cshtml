@model List<ResultBlogDto>

@*
   latest3BlogstComponent Default View
*@


<div class="sidebar-box">
	<h3 class="heading">Son Eklenen Bloglar</h3>
	<div class="post-entry-sidebar">
		<ul>
			@foreach(var blog in Model)
			{
				<li>
					<a href="#">
						<img src="@blog.CoverImage" alt="Image placeholder" class="me-4 rounded">
						<div class="text">
							<h4>@blog.Title</h4>
							<p>@((blog.Description).Length>20 ? blog.Description.Substring(0,20)+" ..." : blog.Description+"." )</p>
							<div class="post-meta">
								<span class="mr-2">@blog.CreatedDate.ToShortDateString() </span>
							</div>
						</div>
					</a>
				</li>
			}
			
			
		</ul>
	</div>
</div>





